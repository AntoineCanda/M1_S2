<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0" metadata-complete="true">

  <servlet>
    <servlet-name>add</servlet-name>
    <servlet-class>car.tp4.servlet.AddServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>add</servlet-name>
    <url-pattern>/add.jsp</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>search</servlet-name>
    <servlet-class>car.tp4.servlet.SearchServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>search</servlet-name>
    <url-pattern>/search.jsp</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>auteur</servlet-name>
    <servlet-class>car.tp4.servlet.AuteurServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>auteur</servlet-name>
    <url-pattern>/auteur</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>books</servlet-name>
    <servlet-class>car.tp4.servlet.BookServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>books</servlet-name>
    <url-pattern>/books</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>init</servlet-name>
    <servlet-class>car.tp4.servlet.InitServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>init</servlet-name>
    <url-pattern>/books/init</url-pattern>
  </servlet-mapping>
</web-app>

